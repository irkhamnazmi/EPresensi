<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    tools:context=".ui.auth.signup.SignupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/included_footer"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"

        >

        <EditText
            android:id="@+id/edtFullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_form_style"
            android:fontFamily="@font/poppins"
            android:hint="Masukkan Nama Lengkap"
            android:textAlignment="center"
            android:textAppearance="@style/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_form_style"
            android:fontFamily="@font/poppins"
            android:hint="Masukkan Username"
            android:textAlignment="center"
            android:textAppearance="@style/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_form_style"
            android:fontFamily="@font/poppins"
            android:hint="Masukkan Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textAppearance="@style/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--    <EditText-->
        <!--        android:id="@+id/edtPasswordRepeat"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:fontFamily="@font/poppins"-->
        <!--        android:hint="Masukkan ulang password"-->
        <!--        android:inputType="textPassword"-->
        <!--        android:textAlignment="center"-->
        <!--        android:layout_marginTop="10dp"-->
        <!--        android:textAppearance="@style/username"-->
        <!--        android:background="@drawable/edt_form_style"-->
        <!--        app:layout_constraintStart_toStartOf="parent"-->
        <!--        app:layout_constraintTop_toTopOf="parent" />-->

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_form_style"
            android:fontFamily="@font/poppins"
            android:hint="Masukkan Email"
            android:textAlignment="center"
            android:textAppearance="@style/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2.5dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/tvLogin"
                android:fontFamily="@font/poppins_semibold"
                android:text="Sudah punya akun?"
                android:textAppearance="@style/lupa_password" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_medium"
                android:text="Login"
                android:textAppearance="@style/daftar"
                android:textStyle="italic" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/btn_form_style"
            android:fontFamily="@font/poppins_bold"
            android:text="Daftar"
            android:textAppearance="@style/login" />


    </LinearLayout>
    <include
        android:id="@+id/included_footer"
        layout="@layout/layout_footer_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>