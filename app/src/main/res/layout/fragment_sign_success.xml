<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    tools:context=".ui.auth.signsuccess.SignSuccessFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Selamat Datang"
            android:textAlignment="center"
            android:textAppearance="@style/selamat_datang" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            tools:text="Yusril Izza Alfadli A"
            android:textAlignment="center"
            android:textAppearance="@style/userlogin"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvKetKonfirmasi"
            style="@style/sebelum_mel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:fontFamily="@font/poppins"
            tools:text="@string/sebelum_mel" />


        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:fontFamily="@font/poppins_semibold"
            android:textAppearance="@style/lanjutkan"
            tools:text="Lengkapi Profil Anda   "

            />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@android:color/transparent"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="italic"
            tools:text="Ganti akun"

            />


    </LinearLayout>


</RelativeLayout>