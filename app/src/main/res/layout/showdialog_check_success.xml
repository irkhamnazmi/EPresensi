<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                tools:src="@drawable/logors"
                android:src="@drawable/logors"/>

            <TextView
                android:id="@+id/absensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_horizontal|top"
                android:text="@string/absensi"
                android:textSize="24dp"
                android:textColor="#5BBFF5"
                android:textAppearance="@style/absensi"
                />

            <TextView
                android:id="@+id/online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_horizontal|top"
                android:text="@string/online"
                android:textSize="22dp"
                android:textAppearance="@style/online"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tvAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            tools:text="Selamat anda"
            android:textSize="28dp"
            android:textAlignment="center"
            android:textAppearance="@style/selamat_datang" />

        <TextView
            android:id="@+id/tvSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="Berhasil"
            android:textAlignment="center"
            android:textColor="#2D7CF3"
            android:textSize="48dp"
            android:textAppearance="@style/absensi"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView
            android:id="@+id/tvCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Check-In"
            android:layout_marginTop="-5dp"
            android:textAlignment="center"
            android:textSize="32dp"
            android:textAppearance="@style/absensi"
            android:fontFamily="@font/poppins_bold"
            />







    </LinearLayout>
</androidx.core.widget.NestedScrollView>