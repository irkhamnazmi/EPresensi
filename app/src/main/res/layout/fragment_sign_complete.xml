<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fafafa"
    tools:context=".ui.auth.signcomplete.SignCompleteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Registrasi Pegawai RSUD Brebes"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Nama Pegawai"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtNamaLengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_form_style"
                android:fontFamily="@font/poppins"
                android:hint="Masukkan Nama Pegawai"
                android:textAlignment="center"
                android:textAppearance="@style/username" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="No. NIP"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtNIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_form_style"
                android:fontFamily="@font/poppins"
                android:hint="Masukkan NIP"
                android:inputType="number"
                android:textAlignment="center"
                android:textAppearance="@style/username" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="No. KTP/NIK"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtNIK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_form_style"
                android:fontFamily="@font/poppins"
                android:hint="Masukkan NIK"
                android:textAlignment="center"
                android:textAppearance="@style/username" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Jenis Kelamin"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/rgGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki - Laki"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Perempuan"
                    tools:ignore="TouchTargetSizeCheck" />

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Tempat &amp; Tanggal Lahir"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtTempatLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_form_style"
                android:fontFamily="@font/poppins"
                android:hint="Masukkan Tempat"
                android:textAlignment="center"
                android:textAppearance="@style/username" />

            <EditText
                android:id="@+id/edtTgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_form_style"
                android:fontFamily="@font/poppins"
                android:hint="Masukkan Tanggal"
                android:inputType="none"
                android:clickable="true"
                android:focusable="false"
                android:textAlignment="center"
                android:textAppearance="@style/username" />

            <EditText
                android:id="@+id/edtUmur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_form_style_readonly"
                android:fontFamily="@font/poppins"
                android:hint="Umur"
                android:inputType="none"
                android:focusable="false"
                android:textAlignment="center"
                android:textAppearance="@style/username" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Alamat Lengkap"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_form_style"
                android:fontFamily="@font/poppins"
                android:hint="Masukkan Alamat Lengkap"
                android:textAlignment="center"
                android:textAppearance="@style/username" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Email"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_form_style_readonly"
                android:fontFamily="@font/poppins"
                android:hint="Email"
                android:focusable="false"
                android:textAlignment="center"
                android:textAppearance="@style/username" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Jabatan"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtJabatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_form_style"
                android:fontFamily="@font/poppins"
                android:hint="Masukkan jabatan"
                android:textAlignment="center"
                android:textAppearance="@style/username" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Ruangan"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtRuangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_form_style"
                android:fontFamily="@font/poppins"
                android:hint="Masukkan Ruangan"
                android:textAlignment="center"
                android:textAppearance="@style/username" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Instansi"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtInstansi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_form_style_readonly"
                android:fontFamily="@font/poppins"
                android:text="RSUD BREBES"
                android:textAlignment="center"
                android:inputType="none"
                android:focusable="false"
                android:textAppearance="@style/username" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Pas Foto"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:visibility="gone"
                xmlns:tools="http://schemas.android.com/tools"
                tools:src="@drawable/profile_dummy"/>

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_form_style"
                android:fontFamily="@font/poppins"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Chooose File. Max 2 MB"
                android:textAppearance="@style/username" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Username"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_form_style_readonly"
                android:fontFamily="@font/poppins"
                android:hint="Username"
                android:focusable="false"
                android:textAlignment="center"
                android:textAppearance="@style/username" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Passsword"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_form_style_readonly"
                android:fontFamily="@font/poppins"
                android:hint="Password"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:focusable="false"
                android:textAppearance="@style/username" />


        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="right">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@id/btnSave"
                android:background="@android:color/darker_gray"
                android:fontFamily="@font/poppins_bold"
                android:padding="10dp"
                android:text="Kembali"
                android:textAppearance="@style/login"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@android:color/holo_blue_dark"
                android:fontFamily="@font/poppins_bold"
                android:padding="10dp"
                android:text="Simpan"
                android:textAppearance="@style/login"
                android:textColor="@color/white" />


        </RelativeLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>